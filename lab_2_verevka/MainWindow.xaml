<Window x:Class="lab_2_verevka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Логический калькулятор"
        Height="720"
        Width="1100"
        WindowStartupLocation="CenterScreen">
    <TabControl FontSize="14"
                Margin="10">
        <TabControl.Background>
            <ImageBrush ImageSource="/Interface;component/image.png" />
        </TabControl.Background>
        <TabItem Header="Логический калькулятор">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                      Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <GroupBox Grid.Column="0"
                              Foreground="White"
                              Header="Редактор формул"
                              FontWeight="Bold"
                              FontSize="14"
                              Margin="0,0,10,0">
                        <TextBox x:Name="FormulaInput"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 FontSize="16"
                                 Padding="10"
                                 Height="80" />
                    </GroupBox>

                    <GroupBox Grid.Column="1"
                              Header="Операторы"
                              FontWeight="Bold"
                              Foreground="White"
                              FontSize="14">
                        <StackPanel Orientation="Vertical"
                                    Width="300">
                            <TextBlock Text="Логические операторы:"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5" />
                            <WrapPanel>
                                <Button x:Name="AndButton"
                                        Content="∧"
                                        FontSize="20"
                                        Width="40"
                                        Height="35"
                                        Margin="2"
                                        Click="InsertSymbol_Click" />
                                <Button x:Name="OrButton"
                                        Content="∨"
                                        FontSize="20"
                                        Width="40"
                                        Height="35"
                                        Margin="2"
                                        Click="InsertSymbol_Click" />
                                <Button x:Name="NotButton"
                                        Content="¬"
                                        FontSize="20"
                                        Width="40"
                                        Height="35"
                                        Margin="2"
                                        Click="InsertSymbol_Click" />
                                <Button x:Name="ImplButton"
                                        Content="→"
                                        FontSize="20"
                                        Width="40"
                                        Height="35"
                                        Margin="2"
                                        Click="InsertSymbol_Click" />
                                <Button x:Name="EqvButton"
                                        Content="↔"
                                        FontSize="20"
                                        Width="40"
                                        Height="35"
                                        Margin="2"
                                        Click="InsertSymbol_Click" />
                                <Button x:Name="ForallButton"
                                        Content="∀"
                                        FontSize="20"
                                        Width="40"
                                        Height="35"
                                        Margin="2"
                                        Click="InsertSymbol_Click" />
                                <Button x:Name="ExistsButton"
                                        Content="∃"
                                        FontSize="20"
                                        Width="40"
                                        Height="35"
                                        Margin="2"
                                        Click="InsertSymbol_Click" />
                            </WrapPanel>

                            <TextBlock Text="Операторы сравнения:"
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5" />
                            <WrapPanel>
                                <Button x:Name="EqualButton"
                                        Content="=="
                                        FontSize="16"
                                        Width="40"
                                        Height="35"
                                        Margin="2"
                                        Click="InsertSymbol_Click" />
                                <Button x:Name="NotEqualButton"
                                        Content="≠"
                                        FontSize="16"
                                        Width="40"
                                        Height="35"
                                        Margin="2"
                                        Click="InsertSymbol_Click" />
                                <Button x:Name="LessButton"
                                        Content="&lt;"
                                        FontSize="16"
                                        Width="40"
                                        Height="35"
                                        Margin="2"
                                        Click="InsertSymbol_Click" />
                                <Button x:Name="GreaterButton"
                                        Content="&gt;"
                                        FontSize="16"
                                        Width="40"
                                        Height="35"
                                        Margin="2"
                                        Click="InsertSymbol_Click" />
                                <Button x:Name="LessEqualButton"
                                        Content="≤"
                                        FontSize="16"
                                        Width="40"
                                        Height="35"
                                        Margin="2"
                                        Click="InsertSymbol_Click" />
                                <Button x:Name="GreaterEqualButton"
                                        Content="≥"
                                        FontSize="16"
                                        Width="40"
                                        Height="35"
                                        Margin="2"
                                        Click="InsertSymbol_Click" />
                            </WrapPanel>

                            <Button x:Name="BuildGraphButton"
                                    Content="Построить график истинности"
                                    FontSize="14"
                                    Margin="0,15,0,0"
                                    Padding="10,5"
                                    Height="35"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Click="BuildGraphButton_Click" />
                        </StackPanel>
                    </GroupBox>
                </Grid>

                <GridSplitter Grid.Row="1"
                              Height="5"
                              HorizontalAlignment="Stretch"
                              Background="LightGray"
                              ShowsPreview="True" />

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <GroupBox Grid.Column="0"
                              Foreground="White"
                              Header="Область определения"
                              FontWeight="Bold"
                              FontSize="14">
                        <StackPanel Orientation="Vertical"
                                    Margin="0,5">
                            <StackPanel Orientation="Horizontal"
                                        Margin="10,5">
                                <TextBlock Text="Min:"
                                           VerticalAlignment="Center"
                                           Width="30" />
                                <TextBox x:Name="MinInput"
                                         Width="60"
                                         Margin="5"
                                         FontSize="14" />
                                <TextBlock Text="Max:"
                                           VerticalAlignment="Center"
                                           Width="30" />
                                <TextBox x:Name="MaxInput"
                                         Width="60"
                                         Margin="5"
                                         FontSize="14" />
                                <TextBlock Text="Step:"
                                           VerticalAlignment="Center"
                                           Width="35" />
                                <TextBox x:Name="StepInput"
                                         Width="60"
                                         Margin="5"
                                         FontSize="14" />
                            </StackPanel>

                            <Button x:Name="ApplyDomainButton"
                                    Content="Применить область"
                                    Width="150"
                                    Margin="0,10,0,10"
                                    Padding="5"
                                    FontSize="14"
                                    Background="#2196F3"
                                    Foreground="White"
                                    Click="ApplyDomainButton_Click" />

                            <GroupBox Header="Текущая область"
                                      FontWeight="Bold"
                                      FontSize="12"
                                      Margin="0,10,0,0">
                                <ListBox x:Name="DomainValuesList"
                                         FontSize="12" />
                            </GroupBox>
                        </StackPanel>
                    </GroupBox>

                    <GridSplitter Grid.Column="1"
                                  Width="5"
                                  VerticalAlignment="Stretch"
                                  Background="LightGray"
                                  ShowsPreview="True"
                                  HorizontalAlignment="Center" />

                    <GroupBox Grid.Column="2"
                              Foreground="White"
                              Header="График"
                              FontWeight="Bold"
                              FontSize="14">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0"
                Margin="0,0,0,10">
                                <oxy:PlotView x:Name="TruthPlotView"
                          Model="{Binding PlotModel}"
                          Background="White"
                          Foreground="Black" />
                            </Border>

                            <StackPanel Grid.Row="1"
                                        Orientation="Vertical">
                                <TextBlock Text="Результаты:"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Margin="0,0,0,5" />
                                <TextBox x:Name="ResultBox"
                                         Height="80"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         FontSize="12"
                                         IsReadOnly="True"
                                         Padding="5" />
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Margin="0,10,0,0">
                                    <Button Content="Экспортировать график"
                                            Margin="5"
                                            Padding="8,3"
                                            FontSize="12" />
                                    <Button Content="Очистить результаты"
                                            Margin="5"
                                            Padding="8,3"
                                            FontSize="12" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Grid>
        </TabItem>

        <TabItem Header="Справка">
            <ScrollViewer Margin="10">
                <StackPanel Margin="0, 10, 0, 0">
                    <TextBlock Text="Руководство пользователя"
        FontSize="20"
        FontWeight="Bold"
        Margin="0,0,0,10"
        Foreground="White" />

                    <TextBlock Text="Синтаксис и правила ввода:"
        FontWeight="Bold"
        Margin="0,0,0,5"
        Foreground="White" />

                    <TextBlock Text="Пример предиката: x > 5"
        Margin="0,0,0,2"
        Foreground="White" />
                    <TextBlock Text="Для выражения с квантором, вводить строку вида: ∃ x ( x > 5)"
        Margin="0,0,0,2"
        Foreground="White" />
                    <TextBlock Text="Внимание: В введенной строке для анализа может быть лишь 1 квантор."
        FontWeight="SemiBold"
        Margin="0,0,0,15"
        Foreground="White" />

                    <TextBlock Text="Поддерживаемые логические операции:"
        FontWeight="Bold"
        Margin="0,10,0,5"
        Foreground="White" />
                    <TextBlock Text="¬ — отрицание (NOT)" Foreground="White" />
                    <TextBlock Text="∧ — конъюнкция (AND)" Foreground="White" />
                    <TextBlock Text="∨ — дизъюнкция (OR)" Foreground="White" />
                    <TextBlock Text="→ — импликация" Foreground="White" />
                    <TextBlock Text="↔ — эквивалентность" Foreground="White" />
                    <TextBlock Text="∀ — квантор общности (игнорируется в текущем анализе, если стоит более одного)" Foreground="White" />
                    <TextBlock Text="∃ — квантор существования (игнорируется в текущем анализе, если стоит более одного)" Foreground="White" />

                    <TextBlock Text="Операторы сравнения:"
        FontWeight="Bold"
        Margin="0,10,0,5"
        Foreground="White" />
                    <TextBlock Text="= — равно" Foreground="White" />
                    <TextBlock Text="≠ — не равно" Foreground="White" />
                    <TextBlock Text="&lt; — меньше" Foreground="White" />
                    <TextBlock Text="&gt; — больше" Foreground="White" />
                    <TextBlock Text="≤ — меньше или равно" Foreground="White" />
                    <TextBlock Text="≥ — больше или равно" Foreground="White" />
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</Window>